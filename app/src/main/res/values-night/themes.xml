<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">#254875</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/lime</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="floatingActionButtonStyle">@style/fab_style</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="splash">
        <item name="android:background">@color/black_blue</item>

    </style>

    <style name="Base.Theme.ToDo.splash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/black_blue</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="toolbar_title_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="background_color">
        <item name="android:background">@color/black_blue</item>
    </style>


    <style name="bottom_nav_style">
        <item name="android:backgroundTint">@color/black_blue_light</item>
    </style>


    <style name="fab_rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="background">@drawable/circle</item>
    </style>

    <style name="fab_style" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/fab_rounded</item>
    </style>
</resources>